<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="427.0" prefWidth="937.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CoursesController">
   <center>
      <VBox alignment="CENTER" prefHeight="500.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <Pane prefHeight="390.0" prefWidth="654.0">
               <children>
                  <Label layoutX="569.0" layoutY="49.0" text="Course List">
                     <font>
                        <Font name="System Bold" size="25.0" />
                     </font>
                  </Label>
                  <TableView fx:id="courseTable" layoutX="407.0" layoutY="96.0" prefHeight="160.0" prefWidth="445.0">
                    <columns>
                      <TableColumn fx:id="codeColumn" prefWidth="75.0" text="Code" />
                      <TableColumn fx:id="titleColumn" prefWidth="75.0" text="Title" />
                        <TableColumn fx:id="creditsColumn" prefWidth="75.0" text="Credits" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <Label layoutX="125.0" layoutY="49.0" text="Course Add">
                     <font>
                        <Font name="System Bold" size="25.0" />
                     </font>
                  </Label>
                  <TextField fx:id="codeField" layoutX="103.0" layoutY="108.0" prefHeight="32.0" prefWidth="180.0" promptText="Code" />
                  <TextField fx:id="nameField" layoutX="103.0" layoutY="160.0" prefHeight="32.0" prefWidth="180.0" promptText="Title" />
                  <TextField fx:id="creditsField" layoutX="103.0" layoutY="214.0" prefHeight="32.0" prefWidth="180.0" promptText="Credits" />
                  <Button layoutX="127.0" layoutY="272.0" mnemonicParsing="false" onAction="#handleSaveCourse" prefHeight="40" prefWidth="132.0" style="-fx-font-size: 16; -fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5;" text="Add" />
                  <Button layoutX="479.0" layoutY="272.0" mnemonicParsing="false" onAction="#handleUpdateCourse" prefHeight="40" prefWidth="132.0" style="-fx-font-size: 16; -fx-background-color: black; -fx-text-fill: white; -fx-background-radius: 5;" text="Update" />
                  <Button layoutX="643.0" layoutY="272.0" mnemonicParsing="false" onAction="#handleDeleteCourse" prefHeight="40" prefWidth="132.0" style="-fx-font-size: 16; -fx-background-color: red; -fx-text-fill: white; -fx-background-radius: 5;" text="Remove" />
                  <Button layoutX="14.0" layoutY="-11.0" mnemonicParsing="false" onAction="#goBack" prefHeight="24.0" prefWidth="74.0" style="-fx-font-size: 16; -fx-background-color: red; -fx-text-fill: white; -fx-background-radius: 5;" text="Return" />
               </children>
            </Pane>
         </children>
      </VBox>
   </center>
</BorderPane>
